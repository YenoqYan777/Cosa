<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <data>

        <variable
            name="swipeHandler"
            type="com.example.cosa.arch.helpers.SwipeHandler" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/mainBckg"
        tools:context=".arch.thingAdded.ThingAddedFragment"
        android:focusable="true"
        android:clickable="true">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_thing_list"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtIntroductionThingAdded"
            bind:bgColorSwipeLeft="@{@color/app_red}"
            bind:bgColorSwipeRight="@{@color/app_red}"
            bind:drawableSwipeLeft="@{@drawable/ic_close_white_24dp}"
            bind:drawableSwipeRight="@{@drawable/ic_close_white_24dp}"
            bind:onItemSwipeLeft="@{(position) -> swipeHandler.onItemSwipedLeft(position)}"
            bind:onItemSwipeRight="@{(position) -> swipeHandler.onItemSwipedRight(position)}"
            bind:swipeEnabled="@{true}" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btnAddNote"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@color/lightGray"
            android:clickable="true"
            android:focusable="true"
            android:scaleType="center"
            android:src="@drawable/ic_add"
            app:fabSize="normal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/rv_thing_list"
            bind:targetApi="lollipop" />

        <ImageView
            android:id="@+id/imgNoThings"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginBottom="128dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/rv_thing_list"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/rv_thing_list"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_no_item" />

        <TextView
            android:id="@+id/noItemYetText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:text="@string/no_things_added"
            android:textColor="@color/textColor"
            android:textSize="22sp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="@+id/imgNoThings"
            app:layout_constraintStart_toStartOf="@+id/imgNoThings"
            app:layout_constraintTop_toBottomOf="@+id/imgNoThings"
            tools:textStyle="bold" />

        <SearchView
            android:id="@+id/searchView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="16dp"
            android:background="@color/darkerBckg"
            android:clickable="true"
            android:focusable="true"
            android:iconifiedByDefault="false"
            android:inputType="text"
            android:queryBackground="@android:color/transparent"
            android:queryHint="Search for item"
            android:textColor="@color/textColor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            bind:targetApi="lollipop" />

        <TextView
            android:id="@+id/txtIntroductionThingAdded"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/montserrat"
            android:text="@string/things"
            android:textColor="@color/lightGray"
            android:textSize="28sp"
            android:visibility="gone"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/searchView" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>